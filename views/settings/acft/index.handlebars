<form action="/settings/acft/add">
<input type="submit" class="btn btn-success mb-2" value="Add Aircraft">
</form>
<div class="row">
    <table class="table">
  <thead>
    <tr>
      <th scope="col-auto">Tail</th>
      <th scope="col-auto">Type</th>
      <th scope="col-2"></th>
    </tr>
 </thead>
  <tbody>

  {{#each acft}}
    <tr>
      <td class="col-auto">{{tail}}</td>
      <td class="col-auto">{{type}}</td>
      <td class="col-2" align="center"><div class="form-inline"><a class ="btn btn-success mr-1" href="/settings/acft/edit/{{id}}"><i class="far fa-edit"></i></a> <form method="POST" action="/settings/acft/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>
    </form></div></td>
    </tr>
  {{else}}
  <p>No Aircrafts</p>
  {{/each}}
  </table>
</div>