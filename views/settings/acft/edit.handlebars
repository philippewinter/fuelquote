<div class="card card-body col-3 mx-auto">
  <h4>Edit Aircraft</h4>
  <form method="POST" action="/settings/acft/{{acft.id}}?_method=PUT">
      <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="tail">Tail#</label>
      <input type="text" name="tail" class="form-control" value="{{acft.tail}}" required>
    </div>
    <div class="form-group">
      <label for="type">Type</label>
      <input type="text" name="type" class="form-control" value="{{acft.type}}" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Save</button>
  </form>
</div>